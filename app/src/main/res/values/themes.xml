<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApplication" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:textColor">@color/white</item>

        <!--transparent status bar color        -->
        <item name="android:colorPrimary">@color/transparent</item>
        <item name="android:navigationBarColor">@color/almost_transparent</item>
        <item name="android:colorPrimaryDark">@color/transparent</item>
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>

    </style>

    <style name="AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">#595959</item>
        <item name="android:colorAccent">#1b5e20</item>
    </style>



    <!-- main_activity.xml cardview -->
    <style name="Theme.Material_Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="mainBackground">@style/main_background_white</item>
        <item name="navStyle">@style/nav_style_white</item>
        <item name="navTextViewStyle">@style/nav_text_view_white</item>
        <item name="navImageViewStyle">@style/nav_image_view_white</item>
        <item name="cardViewElementBackground">@style/card_view_element_background_white</item>

        <!-- activity_main -->
        <item name="aMainCardView">@style/a_main_cardview_white</item>
        <item name="aMainTextView">@style/a_main_text_view_white</item>
        <item name="aMainImageView">@style/a_main_image_view_white</item>

        <!-- activity_planner.xml -->
        <item name="aPlannerCardView">@style/a_planner_card_view_white</item>
        <item name="aPlannerTextView">@style/a_planner_text_view_white</item>
        <item name="aPlannerImageView">@style/a_planner_image_view_white</item>

        <!-- element_trainings_list.xml -->
        <item name="aElementTrainingsListTextView">@style/a_element_trainings_list_text_view_white</item>
        <item name="aElementTrainingsListImageView">@style/a_element_trainings_list_image_view_white</item>

        <!-- element_exercises_list.xml -->
        <item name="aElementExercisesListTextView">@style/a_element_exercises_list_text_view_white</item>
        <item name="aElementExercisesListTextOpView">@style/a_element_exercises_list_text_view_op_white</item>

        <!-- sub_element_exercises_list.xml -->
        <item name="aSubElementExercisesListTextView">@style/a_sub_element_exercises_list_text_view_white</item>
        <item name="aSubElementExercisesListDivider">@style/a_sub_element_exercises_list_divider_white</item>
    </style>
</resources>