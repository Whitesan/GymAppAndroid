<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/black"
    >
    <RelativeLayout
        android:id="@+id/listElementLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/entry_shape"
        android:backgroundTint="@color/almost_transparent"
        >
    <TextView
        android:id="@+id/listElement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@id/editButton"
        android:layout_alignEnd="@id/ListElementIcon"
        android:singleLine="true"
        />
        <TextView
            android:id="@+id/listElement2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            android:layout_marginHorizontal="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@id/editButton"
            android:layout_alignEnd="@id/ListElementIcon"
            android:textSize="14sp"
            android:singleLine="true"

            />
        <ImageView
            android:id="@+id/ListElementIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"

            android:src="@drawable/barbell"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            >
        </ImageView>

        <TextView
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textAlignment="center"
                android:layout_marginHorizontal="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textSize="14sp"
            android:textColor="@color/red"
                android:text="@string/edit"
                />
    </RelativeLayout>

</LinearLayout>