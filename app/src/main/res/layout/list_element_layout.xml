<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <RelativeLayout
        android:id="@+id/listElementLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/entry_shape"
        android:backgroundTint="@color/almost_transparent"
        android:elevation="20dp">

        <TextView
            android:id="@+id/listElement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/ListElementIcon"
            android:layout_alignParentTop="true"
            android:layout_marginHorizontal="20dp"
            android:padding="10dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/listElement2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/ListElementIcon"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:padding="10dp"
            android:singleLine="true"
            android:textAlignment="center"
            android:textSize="14sp"

            />

        <ImageView
            android:id="@+id/ListElementIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/listElementLayoutBackground"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginHorizontal="15dp"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:elevation="40dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editButton"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:background="@color/transparent"
                android:clickable="false"
                android:src="@drawable/edit_icon" />

            <ImageView
                android:id="@+id/deleteListItem"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:background="@color/transparent"
                android:clickable="false"
                android:src="@drawable/delete_icon" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>